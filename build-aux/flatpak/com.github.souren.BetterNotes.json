{
    "app-id": "com.github.souren.BetterNotes",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "betternotes",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "betternotes",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "../.."
                }
            ]
        }
    ]
}
